<body style="margin: 0; padding: 0; background-color: #f8fafc; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
    <!--[if mso | IE]>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
    <td>
    <![endif]-->

    <!-- Email container -->
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="email-container" style="background-color: #f8fafc;">
        <tr>
            <td style="padding: 40px 20px;">
                <!-- Email body -->
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="max-width: 600px; margin: 0 auto;" class="email-body">
                    <tr>
                        <td style="background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08); overflow: hidden;">

                            <!-- Header with gradient -->
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                <tr>
                                    <td style="background: linear-gradient(135deg, #2a4379 25%, #2769f5 100%); padding: 32px 40px; text-align: center;">
                                        <img src="https://grvt.cc/assets/logo.png" alt="GRVT" class="logo" style="height: 40px; width: auto; display: block; margin: 0 auto;" />
                                    </td>
                                </tr>
                            </table>

                            <!-- Main content -->
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                <tr>
                                    <td style="padding: 48px 40px;">

                                        <!-- Reset message -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; padding-bottom: 32px;">
                                                    <h1 class="hero-title" style="margin: 0 0 16px 0; font-size: 28px; font-weight: 700; color: #1f2937; line-height: 1.2;">
                                                        Password Reset Request
                                                    </h1>
                                                    <p class="text-secondary" style="margin: 0; font-size: 18px; color: #6b7280; line-height: 1.5;">
                                                        Hi {{name}}, we received a request to reset your password.
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Reset section -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; padding-bottom: 32px;">
                                                    <p class="text-secondary" style="margin: 0 0 24px 0; font-size: 16px; color: #6b7280; line-height: 1.6;">
                                                        Click the button below to create a new password for your account. This link will expire in {{expires_in}} minutes for security.
                                                    </p>

                                                    <!-- CTA Button -->
                                                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto;">
                                                        <tr>
                                                            <td style="border-radius: 8px; background: linear-gradient(135deg, #2769f5 0%, #1e40af 100%); box-shadow: 0 4px 14px rgba(39, 105, 245, 0.3);">
                                                                <a href="{{resetUrl}}"
                                                                   target="_blank"
                                                                   rel="noopener noreferrer"
                                                                   class="cta-button"
                                                                   style="display: inline-block; padding: 16px 32px; font-size: 18px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px; transition: all 0.2s ease;">
                                                                    Reset My Password
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Divider -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="padding: 24px 0;">
                                                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                                        <tr>
                                                            <td style="border-top: 1px solid #e5e7eb; font-size: 1px; line-height: 1px;">&nbsp;</td>
                                                        </tr>
                                                    </table>
                                                    <p style="text-align: center; margin: 16px 0 0 0; font-size: 14px; color: #9ca3af; font-weight: 500;">
                                                        OR COPY THE LINK BELOW
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Reset URL -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; padding-bottom: 32px;">
                                                    <p class="text-secondary" style="margin: 0 0 16px 0; font-size: 16px; color: #6b7280;">
                                                        If the button doesn't work, copy and paste this link:
                                                    </p>
                                                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto; width: 100%;">
                                                        <tr>
                                                            <td class="url-block" style="background-color: #f3f4f6; border: 2px dashed #d1d5db; border-radius: 8px; padding: 16px 20px; word-break: break-all;">
                                                                <span style="font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace; font-size: 14px; color: #1f2937; line-height: 1.5; user-select: all;">
                                                                    {{resetUrl}}
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Security notice -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="background-color: #fee2e2; border-left: 4px solid #ef4444; padding: 16px 20px; border-radius: 6px; margin-bottom: 24px;">
                                                    <p style="margin: 0; font-size: 14px; color: #b91c1c; line-height: 1.5;">
                                                        <strong>Security Notice:</strong> This password reset link expires in {{expires_in}} minutes. If you didn't request this reset, please contact our support team immediately.
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Disclaimer -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; padding-top: 16px;">
                                                    <p style="margin: 0; font-size: 14px; color: #9ca3af; line-height: 1.5;">
                                                        If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>

                                    </td>
                                </tr>
                            </table>

                            <!-- Footer -->
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                <tr>
                                    <td style="background-color: #f9fafb; padding: 32px 40px; border-top: 1px solid #e5e7eb;">

                                        <!-- Support section -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; padding-bottom: 20px;">
                                                    <h3 style="margin: 0 0 12px 0; font-size: 16px; font-weight: 600; color: #374151;">
                                                        Need Help?
                                                    </h3>
                                                    <p style="margin: 0 0 16px 0; font-size: 14px; color: #6b7280; line-height: 1.5;">
                                                        Our support team is here to assist you with any account issues.
                                                    </p>
                                                    <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto;">
                                                        <tr>
                                                            <td style="padding: 0 8px;">
                                                                <a href="mailto:dev@dannie.cc" style="color: #2769f5; text-decoration: none; font-weight: 600; font-size: 14px;">
                                                                    dev@dannie.cc
                                                                </a>
                                                            </td>
                                                            <td style="color: #d1d5db; font-size: 14px;">|</td>
                                                            <td style="padding: 0 8px;">
                                                                <a href="tel:+902422771777" style="color: #2769f5; text-decoration: none; font-weight: 600; font-size: 14px;">
                                                                    +90 (242) 277 17 77
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Company info -->
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                            <tr>
                                                <td style="text-align: center; border-top: 1px solid #e5e7eb; padding-top: 20px;">
                                                    <p style="margin: 0; font-size: 12px; color: #9ca3af; line-height: 1.5;">
                                                        <strong>GRVT MES</strong><br>
                                                        Yenigöl Mah. Orkide Sok. 44A, Muratpaşa<br>
                                                        07230 Antalya, Türkiye
                                                    </p>
                                                    <p style="margin: 8px 0 0 0; font-size: 11px; color: #9ca3af;">
                                                        © 2026 GRVT MES. All rights reserved.
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>

                                    </td>
                                </tr>
                            </table>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <!--[if mso | IE]>
    </td>
    </tr>
    </table>
    <![endif]-->
</body>
</html>
