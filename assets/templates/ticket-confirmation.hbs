        <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%' class='email-container' style='background-color: #f8fafc;'>
            <tr>
                <td style='padding: 40px 20px;'>
                    <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%' style='max-width: 600px; margin: 0 auto;' class='email-body'>
                        <tr>
                            <td style='background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08); overflow: hidden;'>
                                <!-- Header with gradient -->
                                <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                    <tr>
                                        <td style='background: linear-gradient(135deg, #2a4379 25%, #2769f5 100%); padding: 32px 40px; text-align: center;'>
                                            <img
                                                src='https://grvt.cc/assets/logo.png'
                                                alt='GRVT MES'
                                                class='logo'
                                                style='height: 40px; width: auto; display: block; margin: 0 auto;'
                                            />
                                        </td>
                                    </tr>
                                </table>
                                <!-- Main content -->
                                <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                    <tr>
                                        <td style='padding: 48px 40px;'>
                                            <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                                <tr>
                                                    <td style='text-align: center; padding-bottom: 32px;'>
                                                        <h1 class='hero-title' style='margin: 0 0 16px 0; font-size: 28px; font-weight: 700; color: #1f2937; line-height: 1.2;'>
                                                            We've received your message!
                                                        </h1>
                                                        <p class='text-secondary' style='margin: 0; font-size: 18px; color: #6b7280; line-height: 1.5;'>
                                                            Hello
                                                            {{name}},
                                                            <br />
                                                            Thank you for reaching out to GRVT MES. Your support ticket has been created with reference number
                                                            <strong>{{ticketNumber}}</strong>.
                                                            <br />
                                                            Our team will review your request and get back to you as soon as possible. You can reply to this email if you have more
                                                            information to share.
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                            <!-- CTA Button -->
                                            <table role='presentation' cellspacing='0' cellpadding='0' border='0' style='margin: auto;'>
                                                <tr>

                                                    <td>
                                                        <a
                                                            href='{{baseUrl}}/account/tickets?ticketNumber={{ticketNumber}}'
                                                            target='_blank'
                                                            rel='noopener noreferrer'
                                                            class='cta-button'
                                                            style='display: inline-block; padding: 16px 32px; font-size: 18px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px; transition: all 0.2s ease; text-align: center; background: linear-gradient(135deg, #2769f5 0%, #1e40af 100%); box-shadow: 0 4px 14px rgba(39, 105, 245, 0.3);'
                                                        >
                                                            View Ticket
                                                        </a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style='text-align: center; padding-top: 24px;'>
                                                        <p style='margin: 0 0 8px 0; font-size: 14px; color: #9ca3af;'>Want to stay updated?</p>
                                                        <p style='margin: 0; font-size: 14px;'>
                                                            <a
                                                                href='{{serverBaseUrl}}/api/ticket/consent?email={{email}}&action=subscribe'
                                                                style='color: #2769f5; text-decoration: none; font-weight: 500;'
                                                            >Subscribe</a>
                                                            <span style='color: #d1d5db; margin: 0 8px;'>|</span>
                                                            <a
                                                                href='{{serverBaseUrl}}/api/ticket/consent?email={{email}}&action=unsubscribe'
                                                                style='color: #2769f5; text-decoration: none; font-weight: 500;'
                                                            >Unsubscribe</a>
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                            <!-- Divider -->
                                            <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                                <tr>
                                                    <td style='padding: 24px 0;'>
                                                        <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                                            <tr>
                                                                <td style='border-top: 1px solid #e5e7eb; font-size: 1px; line-height: 1px;'>&nbsp;</td>
                                                            </tr>
                                                        </table>
                                                        <p style='text-align: center; margin: 16px 0 0 0; font-size: 14px; color: #9ca3af; font-weight: 500;'>
                                                            If you did not create a ticket with GRVT MES, please reach out to our support team.
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                                <!-- Footer -->
                                <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                    <tr>
                                        <td style='background-color: #f9fafb; padding: 32px 40px; border-top: 1px solid #e5e7eb;'>
                                            <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                                <tr>
                                                    <td style='text-align: center; padding-bottom: 20px;'>
                                                        <h3 style='margin: 0 0 12px 0; font-size: 16px; font-weight: 600; color: #374151;'>
                                                            Need Help?
                                                        </h3>
                                                        <p style='margin: 0 0 16px 0; font-size: 14px; color: #6b7280; line-height: 1.5;'>
                                                            Our support team is here to assist you with any ticket or account issues.
                                                        </p>
                                                        <table role='presentation' cellspacing='0' cellpadding='0' border='0' style='margin: 0 auto;'>
                                                            <tr>
                                                                <td style='padding: 0 8px;'>
                                                                    <a
                                                                        href='mailto:support@dannie.cc'
                                                                        style='color: #2769f5; text-decoration: none; font-weight: 600; font-size: 14px;'
                                                                    >
                                                                        support@dannie.cc
                                                                    </a>
                                                                </td>
                                                                <td style='color: #d1d5db; font-size: 14px;'>|</td>
                                                                <td style='padding: 0 8px;'>
                                                                    <a href='tel:+902422771777' style='color: #2769f5; text-decoration: none; font-weight: 600; font-size: 14px;'>
                                                                        +90 (242) 277 17 77
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                            <table role='presentation' cellspacing='0' cellpadding='0' border='0' width='100%'>
                                                <tr>
                                                    <td style='text-align: center; border-top: 1px solid #e5e7eb; padding-top: 20px;'>
                                                        <p style='margin: 0; font-size: 12px; color: #9ca3af; line-height: 1.5;'>
                                                            <strong>GRVT MES</strong><br />
                                                            Yenigöl Mah. Orkide Sok. 44A, Muratpaşa<br />
                                                            07230 Antalya, Türkiye
                                                        </p>
                                                        <p style='margin: 8px 0 0 0; font-size: 11px; color: #9ca3af;'>
                                                            ©2025 GRVT MES. All rights reserved.
                                                        </p>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
